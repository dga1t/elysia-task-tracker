{
  "name": "elysia-task-tracker",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run src/server.ts",
    "build": "bun build src/server.ts --outdir dist",
    "start": "bun run dist/server.js",
    "migrate": "bunx drizzle-kit migrate",
    "generate": "bunx drizzle-kit generate:pg",
    "seed": "bun run scripts/seed.ts",
    "format": "bunx prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "bunx prettier --check \"**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "drizzle-orm": "^0.30.9",
    "elysia": "^1.0.21",
    "ioredis": "^5.3.2",
    "postgres": "^3.4.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "drizzle-kit": "^0.22.6",
    "prettier": "^3.6.2",
    "typescript": "^5.4.5"
  }
}
